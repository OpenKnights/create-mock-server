{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext","DOM","DOM.Iterable"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      // "#/*": ["./*"],
      "#types/*": ["types/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "eslint.config.js", "prettier.config.js"]
}
